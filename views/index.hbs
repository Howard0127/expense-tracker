<div class="mx-auto mt-5" style="max-width: 800px;">
  <div class="dropdown container">
    <button class="btn btn-outline-dark btn-block dropdown-toggle" type="button" id="dropdownMenuButton"
      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      支出類別
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="/">全部類別</a>
      {{#each categories}}
      <a class="dropdown-item" href="/records/{{this.name}}">{{this.name}}</a>
      {{/each}}
    </div>
  </div>
  
  <div class="totalAmount row mt-4 mx-4">
    <div class="col-6">
      <p style="font-size:xx-large; color:rgb(53, 130, 160)"><i class="fas fa-calculator mr-3"></i>{{ category }}總金額:</p>
    </div>
    
    <div class="col-6" style="text-align: right;">
      <p class="display-3" style="color: orangered;"><strong>{{totalAmount}}</strong></p>
    </div>
  </div>
  <div class="expense-list container">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item py-0 mx-4">
        <div class="d-flex justify-content-between py-0">

          <div class="record d-flex w-75 row">
            <div class="category-icon align-self-center col-2" style="font-size:30px; color: #78CED1;">
              {{{this.icon}}}
            </div>
            <div class="record-name  d-flex-column col-10 align-self-center">
              <div class="m-0">
                <strong>{{this.name}}</strong>
              </div>
              <small>
                {{this.date}}
              </small>
            </div>
          </div>
          
          <div class="btn pt-4 pr-0">
            <form class="mr-2" action="/records/{{ this._id }}/edit" style="display: inline;">
              <button type="submit" class="btn btn-link p-0"><i class="fas fa-pencil-alt"></i></button>
            </form>
            <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-link p-0"><i class="fas fa-trash-alt"></i></button>
            </form>
          </div>
        </div>
        
      </li>
      {{/each}}
    </ul>
  </div>
</div>

