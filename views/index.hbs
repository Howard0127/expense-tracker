<a href="/records/new">Create A Record</a>
<ul>
  {{#each records}}
    <li>
      {{this.name}}/{{this.date}}/{{this.amount}}/{{this.category}}
      <a href="/records/{{this._id}}/edit">修改</a>
      <form action="/records/{{this._id}}/?_method=DELETE" method="POST" style="display: inline">
        <button class="btn btn-primary btn-sm" type="submit">刪除</button>
      </form>
    </li>
  {{/each}}
</ul>